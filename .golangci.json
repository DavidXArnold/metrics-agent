{
  "run": {
    "timeout": "5m"
  },
  "gocyclo": {
    "min-complexity": 12
  },
  "lll": {
    "line-length": 120
  },
  "linters": {
    "disable-all": true,
    "enable": [
      "deadcode",
      "gocyclo",
      "golint",
      "goconst",
      "misspell",
      "ineffassign",
      "lll",
      "vet",
      "gosec",
      "dupl",
      "unconvert",
      "errcheck",
      "staticcheck",
      "structcheck",
      "varcheck",
      "maligned",
      "gofmt"
    ]
  },
  "issues": {
    "exclude-rules": [{
      "path": "_test.go",
      "linters": [
        "gocyclo",
        "errcheck",
        "dupl",
        "gosec"
      ]
    }]
  }
}